# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build api-main`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t api-main`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system api-main && \
          adduser --system -G api-main api-main

COPY dist/apps/api-main api-main
RUN chown -R api-main:api-main .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix api-main --omit=dev -f install

CMD [ "node", "api-main" ]
