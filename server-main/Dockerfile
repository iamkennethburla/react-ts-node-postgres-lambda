# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build server-main`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t server-main`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system server-main && \
          adduser --system -G server-main server-main

COPY dist/server-main server-main
RUN chown -R server-main:server-main .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix server-main --omit=dev -f install

CMD [ "node", "server-main" ]
